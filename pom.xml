                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <!--<outputDirectory>C:/Users/sixef/OneDrive/Bureau/server/plugins</outputDirectory> -->
                            <outputFile>C:/Users/sixef/OneDrive/Bureau/server/plugins/UnlimitedGrind.jar</outputFile>
                            <relocations>
                                <relocation>
                                    <pattern>com.zaxxer.hikari</pattern>
                                    <shadedPattern>me.mc2.internal.hikari</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
